@model CreateChannelInputModel
@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center text-mishmash">Create Channel</h1>
<hr class="bg-mishmash w-50 hr-2" />
<form method="post" asp-controller="Channels" asp-action="CreateChannel" class="mx-auto w-50">
    <div class="form-group">
        <label class="text-mishmash">Name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Name...">
    </div>

    <div class="form-group">
        <label for="description" class="text-mishmash">Description</label>
        <textarea asp-for="Description" class="form-control" id="description" placeholder="Description..."></textarea>
    </div>

    <div class="form-group">
        <label for="tags" class="text-mishmash text-center">Tags</label>
        <input type="text" asp-for="Tags" class="form-control" id="tags" placeholder="Tag1, Tag2, Tag3..." name="tags">
    </div>
    <div class="container-fluid">
        <h1 class="text-center text-mishmash">Channel Type</h1>
        <hr class="bg-mishmash w-50 hr-2" />
    </div>
    <div class="row justify-content-around">
        @foreach (var item in Model.ChannelTypes)
        {
            <div class="form-check form-check-inline">
                <input class="form-check-input" asp-for="SelectedChannelType" type="radio" value="@item">
                <label class="form-check-label text-mishmash" for="@item">@item</label>
            </div>
        }
    </div>
    <hr class="bg-mishmash w-50 hr-2" />
    <div class="button-holder mt-4 d-flex justify-content-center">
        <button type="submit" class="btn bg-mishmash text-white">Create</button>
    </div>
</form>

