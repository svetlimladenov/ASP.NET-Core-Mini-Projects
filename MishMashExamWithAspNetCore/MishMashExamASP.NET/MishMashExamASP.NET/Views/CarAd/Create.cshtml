@using MishMashExamASP.NET.Models.CarAd

@model MishMashExamASP.NET.Models.CarAd.CreateInputModel
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1>Create</h1>

    <form asp-controller="CarAd" asp-action="Create" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div>
            <label asp-for="Car.Model"></label>
            <input asp-for="Car.Model" class="form-control" />
            <span asp-validation-for="Car.Model" class="text-danger"></span>
        </div>
        <div>

            <label asp-for="Car.Brand"></label>
            <input asp-for="Car.Brand" class="form-control" />
            <span asp-validation-for="Car.Brand" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="LongDescription"></label>
            <textarea asp-for="LongDescription" class="form-control"></textarea>
            <span asp-validation-for="LongDescription" class="text-danger"></span>
        </div>
        <div>

            <label asp-for="Year"></label>
            <input asp-for="Year" class="form-control" data-val="false" />
            <span asp-validation-for="Year" class="text-danger"></span>

        </div> 
        <div>

            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>


        @*<label asp-for="Type"></label>
        <select asp-for="Type" class="form-control">
            @foreach (var type in Enum.GetValues(typeof(CarType)))
            {
            <option>@type</option>
            }
        </select>*@
        <div>
            <label asp-for="Type"></label>
            <select asp-for="Type" asp-items="@Html.GetEnumSelectList<CarType>()" class="form-control">
                <option value="0">Please select</option>
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        

        <input type="submit" />
    </form>

</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}