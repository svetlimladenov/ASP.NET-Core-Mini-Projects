@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<main class="mt-3">
    <h1 class="text-center text-mishmash">Register</h1>
    <hr class="bg-mishmash w-50 hr-2" />
    <form id="account" class="mx-auto w-50" method="post" asp-route-returnUrl="@Model.ReturnUrl">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Username" class="text-mishmash">Username</label>
            <input asp-for="Input.Username" type="text" class="form-control" id="username" placeholder="Username..." name="username">
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password" class="text-mishmash">Password</label>
            <input type="password" asp-for="Input.Password" class="form-control" id="password" placeholder="Password..." name="password">
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.ConfirmPassword" class="text-mishmash">Confirm Password</label>
            <input type="password" asp-for="Input.ConfirmPassword" class="form-control" id="password" placeholder="Password..." name="confirmPassword">
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Email" class="text-mishmash">Email</label>
            <input asp-for="Input.Email" class="form-control" id="password" placeholder="Email..." name="email">
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="button-holder mt-4 d-flex justify-content-center">
            <button type="submit" class="btn bg-mishmash text-white">Register</button>
        </div>
    </form>
</main>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
